<div class='container mt-5'>
  <h2>Enviar um coment√°rio</h2>
  <%= form_for @feedback, url: supervisorDashboard_feedback_path(@feedback, workshop_id: @workshop_id) do |f| %>
    <div class='form-group'>
      <%= f.label(:subject, 'Assunto') %>
      <%= f.text_field(:subject, value: @feedback.subject, class: 'form-control', id: 'subject') %>
    </div>

    <div class='form-group'>
      <%= f.label(:content, 'Corpo') %>
      <%= f.text_area(:content, value: @feedback.content, class: 'form-control content-field', rows: "10", id: 'content') %>
    </div>

    <%= f.submit('Enviar', class: 'btn btn-success')%>
    <%= link_to 'Voltar', workshop_path(id: @workshop_id), class: 'btn btn-info'%>
  <% end %>
</div>
