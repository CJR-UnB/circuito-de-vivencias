</section>

<!-- Contact -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Entre em contato!  </h2>
        <h3 class="section-subheading" style='color: #f2f2f2;'>Envie-nos um email ou entre em contato pelo nosso telefone.</h3>
      </div>
    </div>
    <div class="row text-center">
      <% if @contact.present? %>
        <div class="col-md-6">
          <span class="fa-stack fa-4x">
            <i class="fas fa-circle fa-stack-2x text-primary"></i>
            <i class="fas fa-phone fa-stack-1x fa-inverse"></i>
          </span>
          <h4 class="service-heading" style='color: #d9d9d9;'>
            <%= @contact.phone %>
          </h4>
        </div>
        <div class="col-md-6">
          <span class="fa-stack fa-4x">
            <i class="fas fa-circle fa-stack-2x text-primary"></i>
            <i class="fas fa-envelope fa-stack-1x fa-inverse"></i>
          </span>
          <h4 class="service-heading" style='color: #d9d9d9;'>
              <%= @contact.email %>
          </h4>
        </div>
      <% end %>
    </div>
  </div>
</section>

