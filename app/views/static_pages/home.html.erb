  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6">
        <a >
          <%= image_tag "Departamento de matematica - UnB.png", class: "img-fluid d-block mx-auto colab-img"%>
        </a>
      </div>
      <div class="col-md-4 col-sm-6">
        <a >
          <%= image_tag "FAP-DF.jpg", class: "img-fluid d-block mx-auto colab-img"%>
