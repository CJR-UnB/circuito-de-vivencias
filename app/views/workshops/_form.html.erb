<div class='container mt-5'>
  <%= render 'alert' %>

  <%= form_for @workshop do |f| %>
    <div class='form-group'>
      <%= f.label(:title, 'TÃ­tulo') %>
      <%= f.text_field(:title, value: @workshop.title, class: 'form-control', id: 'title') %>
    </div>

    <div class='form-group'>
      <%= f.label(:categories, 'Categorias') %>

      <%= f.select(:categories, Category.all.collect { |p| [p.name, p.id] }, {}, class: 'form-control', multiple: true) %>
    </div>

    <div class='form-group'>
      <%= f.label(:resume, 'Resumo') %>
      <%= f.text_field(:resume,  value: @workshop.resume, class: 'form-control', id: 'resume') %>
    </div>

    <div class='form-group'>
      <%= f.label(:document, 'Documento') %>
      <%= f.file_field(:document, accept: '.docx, .odt', class: 'form-control', id: 'document') %>
    </div>

    <%= f.submit('Salvar', class: 'btn btn-success')%>
    <%= link_to 'Voltar', workshops_path, class: 'btn btn-info'%>
  <% end %>
</div>
