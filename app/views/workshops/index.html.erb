<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<% @workshops.each do |workshop| %>
  <h1><%= workshop.title %></h1>
  <h4><%= User.find(workshop.author_id).name %></h4>
  <%= link_to 'Show', workshop_path(workshop) %>
  <%= link_to 'Edit', edit_workshop_path(workshop) %>
  <%= link_to 'Destroy', destroy_workshop_path(workshop), method: 'delete', data: {confirm: 'Tem certeza?'} %>
<% end %>

<br>

<%= link_to 'Voltar', root_path %>
