<header class="bg-primary text-white">
  <div class="container text-center" id="#top">
    <h1><%= @workshop.title %></h1>
    <p class="lead"><%= User.find(@workshop.author_id).name %> - ano de publicacao</p>
  </div>
</header>

<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2>Resumo</h2>
        <p class="lead"><%= @workshop.resume %></p>
      </div>
    </div>
  </div>
</section>

<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <% if @comments.present? %>
          <% @comments.each do |comment| %>
            <div class="comment_container">
              <%= comment.commentContent %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <% if user_signed_in? %>
          <%= form_with scope: :comment, url: comment_index_path do |f| %>
            <div class='form-group'>
              <%= f.label(:commentContent, 'Comentário') %>
              <%= f.text_area(:commentContent, class: 'form-control') %>
              <%= f.number_field(:workshop_id, hidden: true, value: @workshop.id) %>
              <br>
              <%= f.submit('Salvar', class: 'btn btn-success')%>
              <%= link_to 'Voltar', workshops_path, class: 'btn btn-info'%>
            </div>
          <% end %>
        <% else %>
          <span><h2>Comentário não disponível, logue no sistema para comentar.</h2></span>
        <%  end %>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; Departamento de Matemática da Universidade de brasília 2018</p>
  </div>
