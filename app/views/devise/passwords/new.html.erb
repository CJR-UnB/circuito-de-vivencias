<%= stylesheet_link_tag 'login'%>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Esqueceu sua senha?</h5>
                    <p class="card-title text-center subtitle">Preencha seu email para que possa receber instruções de como recuperar</p>
                    <%=  form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <%= devise_error_messages! %>
                        <div class="form-label-group">
                            <%= f.label :Email %><br /><br />
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "form-control spacing-fields", placeholder: "Email" %>
                        </div>

                        <div class="actions">
                            <%= f.submit "Enviar email", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
                        </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>