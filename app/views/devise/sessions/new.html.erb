<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->
<%= stylesheet_link_tag 'login'%>
<div style="min-height: 100vh; margin: 0; max-width: 100%; <% if Background.find_by(active: true).present? %>background-image: url(<%= url_for(Background.find_by(active: true).image) %>); background-repeat: no-repeat; background-size: cover; background-position: center;<% end %>">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign In</h5>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
                            <%= devise_error_messages! %>
                            <div class="form-label-group">
                                <%= f.label :email %><br /><br />
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "form-control spacing-fields", placeholder: "Email" %>
                            </div>

                            <div class="form-label-group">
                                <%= f.label :password %><br /><br />
                                <%= f.password_field :password, autocomplete: "off", id: "password", class: "form-control spacing-fields", placeholder: "Senha" %>
                            </div>

                            <% if devise_mapping.rememberable? -%>
                            <div class="custom-control custom-checkbox mb-3">
                                <%= f.check_box :remember_me, class: "custom-control-input" %>
                                <%= f.label :remember_me %>
                            </div>
                            <% end %>

                            <div class="actions">
                                <%= f.submit "Entrar", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
                            </div>
                        <% end %>
                        <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
