<div class='container'>
  <%= form_for @history, url: form_url, method: form_method do |f| %>
    <div class='form-group'>
      <%= f.label(:time, 'Data') %>
      <%= f.text_field(:time, class: 'form-control') %>
    </div>
    <div class='form-group'>
      <%= f.label(:title, 'Título') %>
      <%= f.text_field(:title, class: 'form-control') %>
    </div>
    <div class='form-group'>
      <%= f.label(:body, 'Texto') %>
      <%= f.text_area(:body, class: 'form-control') %>
    </div>
    <div class='form-group'>
      <%= f.label(:order, 'Posição') %>
      <%= f.number_field(:order, class: 'form-control', min: @min, step: 1) %>
    </div>
    <% if @history.image.present? %>
      <div class='form-group'>
        <%= image_tag(@history.image, style: 'width: 240px; height: 240px; object-fit: cover;', class: 'img-thumbnail') %>
      </div>
    <% end %>
    <div class='form-group'>
      <%= f.label(:image, 'Imagem') %>
      <%= f.file_field(:image, accept: '.jpg, .jpeg, .png', class: 'form-control-file', id: 'image') %>
    </div>
    <div class='form_group mt-3'>
      <%= f.submit('Enviar', class: 'btn btn-success') %>
    </div>
  <% end %>
</div>
