<div class='container'>
  <%= form_for @staff_member, url: form_url, method: form_method do |f| %>
    <div class='form-group'>
      <%= f.label(:name, 'Nome') %>
      <%= f.text_field(:name, class: 'form-control') %>
    </div>
    <div class='form-group'>
      <%= f.label(:role, 'Cargo') %>
      <%= f.text_field(:role, class: 'form-control') %>
    </div>
    <% if @staff_member.image.present? %>
      <div class='form-group'>
        <%= image_tag(@staff_member.image, style: 'width: 240px; height: 240px; object-fit: cover;', class: 'img-thumbnail') %>
      </div>
    <% end %>
    <div class='form-group'>
      <%= f.label(:image, 'Imagem') %>
      <%= f.file_field(:image, accept: '.jpg, .jpeg, .png', class: 'form-control-file', id: 'image') %>
    </div>
    <div class='form_group mt-3'>
      <%= f.submit('Enviar', class: 'btn btn-success') %>
    </div>
  <% end %>
</div>
