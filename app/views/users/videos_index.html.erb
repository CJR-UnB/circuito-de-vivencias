<div class="video-background">
    <%= link_to root_path, class: "btn btn-md btn-outline-warning btn-voltar" do%>
        <i class="fa fa-home" aria-hidden="true">Voltar</i>
    <% end %>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-6">
                <div class="search-form">
                    <%= form_tag(videos_path, :method => :get) do %>
                        <%= text_field_tag :title, "", class: 'form-control' %>
                        <%= submit_tag 'Pesquisar', class: "btn btn-info" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <% if @videos.length != 0 %>
        <h2 class="text-xs-center videos-index-title">Videos de oficinas em pratica</h2>
        <div class="container pb-video-container">
            <div class="col-md-10 offset-md-1">
                <div class="row pb-row">
                    <% @videos.each do |video| %>
                        <div class="col-md-3 pb-video">
                            <iframe class="pb-video-frame" width="100%" height="230" src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
                            <label class="form-control label-warning text-xs-center"><%= video.title %></label>
                        </div>
                    <% end %>
                </div>
            </div>
            <br>
            <% if @last_page.to_i != 1 %>
                <ul class="pagination justify-content-center", style="margin-top: 2%;">
                    <%if @page.to_i != 1 %>
                        <li class="page-item">
                        <%= link_to videos_path(page: @page.to_i-1), class: "page-link" do %>
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        <% end %>
                        </li>
                    <% end %>
                    <li class="page-item">
                        <%= link_to @page, videos_path(page: @page), class: "page-link btn btn-primary" %>
                    </li>
                    <% if @page.to_i + 1 <= @last_page%>
                        <li class="page-item">
                        <%= link_to @page.to_i+1, videos_path(page: @page.to_i+1), class: "page-link" %>
                        </li>
                    <% end %>
                    <% if @page.to_i + 2 <= @last_page%>
                        <li class="page-item">
                        <%= link_to @page.to_i+2, videos_path(page: @page.to_i+2), class: "page-link" %>
                        </li>
                    <% end %>
                    <%if @page.to_i != @last_page.to_i %>
                        <li class="page-item">
                        <%= link_to videos_path(page: @page.to_i+1), class: "page-link", aria_label: "Next" do %>
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        <% end %>
                        </li>
                    <% end %>
                </ul>
            <% end %>
        </div>
    <% else %>
        <h2 style="text-align: center; color: white; margin-top: 15%; margin-bottom: 5%;"> Nenhum video encontrado </h2>
    <% end %>
</div>
