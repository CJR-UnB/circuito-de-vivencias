<div class='mt-5'>
    <table class='table table-striped'>
      <thead class='thead-light'>
        <tr>
          <th scope='col'>#</th>
          <th scope='col'>Nome</th>
          <th scope='col'>Sobrenome</th>
          <th scope='col'>C.P.F.</th>
          <th scope='col'>Editar</th>
          <th scope='col'>Excluir</th>
        </tr>
      </thead>
      <tbody>
        <% if @users.present? %>
          <% @users.each do |user| %>
            <tr>
              <th scope='row'><%= user.id %></th>
              <td><%= user.name %></td>
              <td><%= user.surname %></td>
              <td><%= user.cpf %></td>
              <td><%#= link_to 'Editar', edit_workshop_path(workshop) %></td>
              <td><%#= link_to 'Excluir', workshop_path(workshop), method: 'delete', data: {confirm: 'Tem certeza?'} %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
