<div class='mt-5'>
    <table class='table table-striped'>
      <thead class='thead-light'>
        <tr>
          <th scope='col'>#</th>
          <th scope='col'>Nome</th>
          <th scope='col'>C.P.F.</th>
          <th scope='col'>Tipo</th>
          <th scope='col'>Editar</th>
          <th scope='col'>Excluir</th>
        </tr>
      </thead>
      <tbody>
        <% if @users.present? %>
          <% @users.each do |user| %>
            <% if user == current_user %>
              <tr>
                <th scope='row'><%= user.id %></th>
                <td><%= user.name %> <%= user.surname %></td>
                <td><%= user.cpf %></td>
                <td><%= Role.find(user.role_id).name %></td>
                <td><%= link_to 'Editar', adminDashboard_edit_user_path(user.id) %></td>
                <td><%#= link_to 'Excluir', adminDashboard_users_path(id: user.id), method: 'delete', data: {confirm: 'Tem certeza?'} %></td>
              </tr>
            <% else %>
              <tr>
                <th scope='row'><%= user.id %></th>
                <td><%= user.name %> <%= user.surname %></td>
                <td><%= user.cpf %></td>
                <td><%= Role.find(user.role_id).name %></td>
                <td><%= link_to 'Editar', adminDashboard_edit_user_path(user.id) %></td>
                <td><%= link_to 'Excluir', adminDashboard_users_path(id: user.id), method: 'delete', data: {confirm: 'Tem certeza?'} %></td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
