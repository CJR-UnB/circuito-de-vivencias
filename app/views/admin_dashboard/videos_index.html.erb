<h2 class="text-xs-center admin-videos-index-title">Videos de oficinas em pratica</h2>
<div class="container pb-video-container">
    <div class="col-md-10 offset-md-1">
        <div class="row pb-row">
            <% @videos.each do |video| %>
                <div class="col-md-3 pb-video">
                    <iframe class="pb-video-frame" width="100%" height="230" src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
                    <label class="form-control label-warning text-xs-center"><%= video.title %></label>
                    <label class="d-flex justify-content-around form-control label-warning text-xs-center"><%= link_to "Editar", adminDashboard_edit_video_path(id: video.id, page: @page), class: "btn btn-sm btn-outline-danger" %><%= link_to "Remover", adminDashboard_delete_video_path(id: video.id, page: @page), class: "btn btn-sm btn-outline-danger", method: :delete %></label>
                </div>
            <% end %>
        </div>
    </div>
    <br>
    <% if @last_page.to_i != 1 %>
        <ul class="pagination justify-content-center", style="margin-top: 2%;">
            <%if @page.to_i != 1 %>
                <li class="page-item">
                <%= link_to adminDashboard_videos_path(page: @page.to_i-1), class: "page-link" do %>
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                <% end %>
                </li>
            <% end %>
            <li class="page-item">
                <%= link_to @page, adminDashboard_videos_path(page: @page), class: "page-link btn btn-primary" %>
            </li>
            <% if @page.to_i + 1 <= @last_page.to_i%>
                <li class="page-item">
                <%= link_to @page.to_i+1, adminDashboard_videos_path(page: @page.to_i+1), class: "page-link" %>
                </li>
            <% end %>
            <% if @page.to_i + 2 <= @last_page.to_i%>
                <li class="page-item">
                <%= link_to @page.to_i+2, adminDashboard_videos_path(page: @page.to_i+2), class: "page-link" %>
                </li>
            <% end %>
            <%if @page.to_i != @last_page.to_i %>
                <li class="page-item">
                <%= link_to adminDashboard_videos_path(page: @page.to_i+1), class: "page-link", aria_label: "Next" do %>
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                <% end %>
                </li>
            <% end %>
        </ul>
    <% end %>
    <%= link_to 'Postar video', adminDashboard_post_video_path, class: "btn btn-md btn-outline-success"%>
</div>
