    <%= f.label(:cpf, 'C.P.F.') %>
    <%= f.text_field(:cpf, class: 'form-control') %>
  </div>
  <div class='form-check'>
    <%= f.check_box(:adminRole, checked_value: true, unchecked_value: false, class: 'form-check-input') %>
