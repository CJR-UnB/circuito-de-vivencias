<%= form_for @background, url: form_url, method: form_method do |f| %>
  <% if @background.image.present? %>
    <div class='form-group'>
      <%= image_tag(@background.image, style: 'width: 240px; height: 240px; object-fit: cover;', class: 'img-thumbnail') %>
    </div>
  <% end %>
  <div class='form-group'>
    <%= f.label(:image, 'Imagem') %>
    <%= f.file_field(:image, accept: '.jpg, .jpeg, .png', class: 'form-control-file', id: 'image') %>
  </div>
  <div class='form-check'>
    <%= f.check_box(:active, checked_value: true, unchecked_value: false, class: 'form-check-input') %>
    <%= f.label(:active, 'Exibir', class: 'form-check-label') %>
  </div>
  <div class='form-group mt-3'>
    <%= f.submit('Salvar', class: 'btn btn-sm btn-success') %>
    <% if form_method == :patch %>
      <%= link_to 'Excluir', adminDashboard_background_path(@background), class: 'btn btn-sm btn-danger', method: :delete %>
    <% end %>
  </div>
<% end %>
