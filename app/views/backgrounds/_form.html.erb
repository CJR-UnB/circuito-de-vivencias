<%= form_for @background, url: form_url, method: form_method do |f| %>
  <div class='form-group'>
    <%= f.label(:image, 'Imagem') %>
    <%= f.file_field(:image, accept: '.jpg, .jpeg, .png', class: 'form-control-file', id: 'image') %>
  </div>
  <div class='form-check'>
    <%= f.check_box(:active, checked_value: true, unchecked_value: false, class: 'form-check-input') %>
    <%= f.label(:active, 'Exibir', class: 'form-check-label') %>
  </div>
  <div class='form-group mt-3'>
    <%= f.submit('Salvar', class: 'btn btn-sm btn-success') %>
  </div>
<% end %>
